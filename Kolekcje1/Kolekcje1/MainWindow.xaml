<Window x:Class="Kolekcje1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolekcje1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Button x:Name="button" Content="Otwórz plik Unicode" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Width="150" Click="button_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="200" Margin="0,0,0,0" VerticalAlignment="Center" Width="250">
            <TextBox x:Name="textBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
        </Border>
        <Button x:Name="buttonOblicz" Content="Oblicz znaki w pliku" HorizontalAlignment="Center" Margin="0,0,0,5" VerticalAlignment="Bottom" Width="150" Click="buttonOblicz_Click"/>
    </Grid>
</Window>
